<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textoHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ritmo cardiaco: --- bpm"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textoLight"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luz: --- lx"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textoHeart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonConectar" />

    <Button
        android:id="@+id/botonConectar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar con mÃ³vil"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textoLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botonEnviar" />

    <Button
        android:id="@+id/botonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar datos"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/botonConectar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
